 <div class="card card-cascade narrower mt-5">

    <!--Card image-->
    <div class="view view-cascade gradient-card-header purple-gradient narrower py-4 mx-4 mb-3 d-flex justify-content-center align-items-center">

        <h4 class="white-text font-weight-bold text-uppercase mb-0">Daily Time Record</h4>

    </div>
    <!--/Card image-->

    <div class="px-4">

        <!--Table-->
        <table class="table table-hover table-responsive-md mb-0">

            <!--Table head-->
            <thead>
                <tr>
                    <th class="th-lg">First Name</th>
                    <th class="th-lg">Last Name</th>
                    <th class="th-lg">Work Assigned</th>
                    <th class="th-lg">Time In</th>
                    <th class="th-lg">Time Out</th>
                </tr>
            </thead>
            <!--Table head-->

            <!--Table body-->
            <tbody>
    </tr>
    <% @dtrs.each do |dtr| %>
  <tr>
    <td><%= dtr.gName %></td>
    <td><%= dtr.lName %></td>
    <td><%= dtr.wAssigned %></td>
      <td><%= dtr.timein %></td>
    <td><%= dtr.timeout %></td> 
  </tr>
    <% end %>
            </tbody>
            <!--Table body-->
        </table>

    </div>

    <hr class="my-0">

    <!--Bottom Table UI-->
    <div class="d-flex justify-content-center">

        <!--Pagination -->
        <nav class="my-4 pt-2">
            <ul class="pagination pagination-circle pg-purple mb-0">

                <!--First-->
                <li class="page-item disabled clearfix d-none d-md-block"><a class="page-link">First</a></li>

                <!--Arrow left-->
                <li class="page-item disabled">
                    <a class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
                </li>

                <!--Numbers-->
                <li class="page-item active"><a class="page-link">1</a></li>
                <li class="page-item"><a class="page-link">2</a></li>
                <li class="page-item"><a class="page-link">3</a></li>
                <li class="page-item"><a class="page-link">4</a></li>
                <li class="page-item"><a class="page-link">5</a></li>

                <!--Arrow right-->
                <li class="page-item">
                    <a class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
                </li>

                <!--First-->
                <li class="page-item clearfix d-none d-md-block"><a class="page-link">Last</a></li>
                <a class="btn btn-light btn-xl js-scroll-trigger" href="signout">Log Out</a>
            </ul>
        </nav>
        <!--/Pagination -->

    </div>
    <!--Bottom Table UI-->

</div>
